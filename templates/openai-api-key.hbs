<form>
  <div class="form-group">
    <label>{{localize "npc-button-5e.openai.apiKeyForm.apiKeyLabel"}}</label>
    <div class="form-fields">
      <input type="password" name="apiKey" autocomplete="off" placeholder="sk-..." />
    </div>
    <p class="notes">
      {{localize "npc-button-5e.openai.apiKeyForm.storedNote"}}
    </p>
  </div>

  {{#if hasKey}}
  <div class="form-group">
    <label>{{localize "npc-button-5e.openai.apiKeyForm.currentKeyLabel"}}</label>
    <div class="form-fields">
      <input type="text" value="{{keyPreview}}" disabled />
    </div>
    <p class="notes">{{localize "npc-button-5e.openai.apiKeyForm.maskedNote"}}</p>
  </div>
  {{/if}}

  <div class="form-group">
    <label>{{localize "npc-button-5e.openai.apiKeyForm.clearSavedKeyLabel"}}</label>
    <div class="form-fields">
      <input type="checkbox" name="clearKey" />
    </div>
  </div>

  <button type="submit" style="display: none;"></button>
</form>
